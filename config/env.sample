NODE_ENV=development
PORT=8080

# MT5 / MQL bridge credentials
MT5_API_USERNAME=your_mt5_username
MT5_API_PASSWORD=your_mt5_password

# MT5 socket bridge location
MQL_HOST=127.0.0.1
MQL_PORT=4242
MQL_HEARTBEAT_MS=5000
MQL_RECONNECT_MS=3000
MQL_MAX_RECONNECTS=10

# Aerospike connection
# Use "aerospike" as host when running in docker-compose, "127.0.0.1" for local
AEROSPIKE_HOST=127.0.0.1
AEROSPIKE_PORT=3000
# AEROSPIKE_USER=
# AEROSPIKE_PASSWORD=

# Default risk parameters
DEFAULT_STOP_LOSS=0
DEFAULT_TAKE_PROFIT=0
DEFAULT_VOLUME=0.1

# Logging configuration
# LOG_LEVEL options: error, warn, info, debug, trace (default: info)
LOG_LEVEL=info

# Docker Compose runtime options (optional)
# SYMBOL=XAUUSD
# OUTPUT_DIR=./live_analysis_output
# DATA_SOURCE=mql
# DATA_SOURCE options: mql, binance, manual

